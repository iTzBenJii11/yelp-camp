<% layout('layouts/boilerplate') -%>
<div class="position-absolute top-50 start-50 translate-middle">
  <div class="card" style="width: 18rem">
    <img src="<%= campgroundType.image %>" alt="" class="card-img-top" />
    <div class="card-body">
      <h5 class="card-title"><%= campgroundType.title %></h5>
      <p class="card-text"><%= campgroundType.description %></p>
    </div>
    <ul class="list-group list-group-flush">
      <li class="list-group-item"><%= campgroundType.location %></li>
      <li class="list-group-item">Â£<%= campgroundType.price %>/night</li>
    </ul>

    <div class="card-body d-flex">
      <a
        class="btn btn-lg btn-secondary m-1"
        href="/campgrounds/<%= campgroundType._id %>/EDIT"
        >Edit</a
      >
      <form
        action="/campgrounds/<%= campgroundType._id %>?_method=DELETE"
        method="POST"
      >
        <button class="btn btn-danger btn-lg m-1" type="submit">Delete</button>
      </form>
    </div>
    <div class="card-footer">
      <p class="card-text">
        <small class="text-body-secondary">Last updated 3 mins ago</small>
      </p>
    </div>
  </div>
</div>
