<% layout('layouts/boilerplate') -%>

<h1>Edit Campground</h1>

<form action="/campgrounds/<%= campgroundType._id %>?_method=PUT" method="POST">
  <div class="mb-3">
    <label for="title" class="form-label">Current Title </label>
    <input
      type="text"
      class="form-control"
      id="title"
      name="title"
      value="<%= campgroundType.title %>"
      required
    />
  </div>

  <div class="mb-3">
    <label for="locations" class="form-label">Current Location</label>
    <input
      type="text"
      class="form-control"
      name="location"
      id="location"
      value="<%= campgroundType.location %>"
      required
    />
  </div>

  <div class="mb-3">
    <label for="description" class="form-label">Current Description</label>
    <input
      type="text"
      class="form-control"
      name="description"
      id="description"
      value="<%= campgroundType.description %>"
      required
    />
  </div>

  <div class="mb-3">
    <label for="price" class="form-label">Current Price</label>
    <input
      type="number"
      class="form-control"
      name="price"
      id="price"
      value="<%= campgroundType.price %>"
      required
    />
  </div>

  <input class="btn btn-dark m-1" type="submit" value="Edit Campground" />

  <a
    class="btn btn-dark m-1"
    href="/campgrounds/<%= campgroundType._id %>"
    role="button"
    >Cancel</a
  >
</form>
